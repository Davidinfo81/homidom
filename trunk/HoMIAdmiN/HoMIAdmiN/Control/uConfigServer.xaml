<UserControl x:Class="uConfigServer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="404" Height="523">

    <UserControl.Resources>
        <ControlTemplate x:Key="GlassButton" TargetType="{x:Type Button}">
            <ControlTemplate.Resources>
                <Storyboard x:Key="Timeline1">
                    <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="glow" Storyboard.TargetProperty="(UIElement.Opacity)">
                        <SplineDoubleKeyFrame KeyTime="00:00:00.3000000" Value="1"/>
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
                <Storyboard x:Key="Timeline2">
                    <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="glow" Storyboard.TargetProperty="(UIElement.Opacity)">
                        <SplineDoubleKeyFrame KeyTime="00:00:00.3000000" Value="0"/>
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </ControlTemplate.Resources>
            <Border BorderBrush="#FFFFFFFF" BorderThickness="1,1,1,1" CornerRadius="4,4,4,4">
                <Border x:Name="border" Background="#7F000000" BorderBrush="#FF000000" BorderThickness="1,1,1,1" CornerRadius="4,4,4,4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.507*"/>
                            <RowDefinition Height="0.493*"/>
                        </Grid.RowDefinitions>
                        <Border Opacity="0" HorizontalAlignment="Stretch" x:Name="glow" Width="Auto" Grid.RowSpan="2" CornerRadius="4,4,4,4">
                            <Border.Background>
                                <RadialGradientBrush>
                                    <RadialGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1.702" ScaleY="2.243"/>
                                            <SkewTransform AngleX="0" AngleY="0"/>
                                            <RotateTransform Angle="0"/>
                                            <TranslateTransform X="-0.368" Y="-0.152"/>
                                        </TransformGroup>
                                    </RadialGradientBrush.RelativeTransform>
                                    <GradientStop Color="#B28DBDFF" Offset="0"/>
                                    <GradientStop Color="#008DBDFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Grid.RowSpan="2"/>
                        <Border HorizontalAlignment="Stretch" Margin="0,0,0,0" x:Name="shine" Width="Auto" CornerRadius="4,4,0,0">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.494,0.889" StartPoint="0.494,0.028">
                                    <GradientStop Color="#99FFFFFF" Offset="0"/>
                                    <GradientStop Color="#33FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                </Border>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" TargetName="shine" Value="0.4"/>
                    <Setter Property="Background" TargetName="border" Value="#CC000000"/>
                    <Setter Property="Visibility" TargetName="glow" Value="Hidden"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource Timeline1}"/>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard x:Name="Timeline2_BeginStoryboard" Storyboard="{StaticResource Timeline2}"/>
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>

    <Grid Margin="1">
        <Grid.Background >
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="DarkGray" Offset="0.0" />
                <GradientStop Color="DarkGray" Offset="0.5" />
                <GradientStop Color="Black" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Border Name="Border1" BorderThickness="2" BorderBrush="Gray">

        </Border>
        <GroupBox Header="Liste des serveurs" Name="GroupBox1" Margin="6.5,37,6.5,0" Height="145" VerticalAlignment="Top">
            <Grid>
                <Label Foreground="White" Margin="136,30,145,0" Name="Label6" Height="27" VerticalAlignment="Top">Adresse Serveur:</Label>
                <CheckBox Margin="140,0,78,33" Name="CheckBox1" Foreground="White" Height="15.723" VerticalAlignment="Bottom">Serveur par défaut</CheckBox>
                <Button Height="23" Margin="168,0,0,5" Name="BtnNewServer" Template="{DynamicResource GlassButton}" VerticalAlignment="Bottom" Foreground="White" HorizontalAlignment="Left" Width="59">Nouveau</Button>
                <Button Height="23" HorizontalAlignment="Right" Margin="0,0,80,5" Name="BtnSaveServer" Template="{DynamicResource GlassButton}" VerticalAlignment="Bottom" Width="64" Foreground="White">Enregistrer</Button>
                <Button Height="23" Margin="0,0,10,6" Name="BtnDelServer" VerticalAlignment="Bottom" Template="{DynamicResource GlassButton}" HorizontalAlignment="Right" Width="64" Foreground="White">Supprimer</Button>
                <Label Foreground="White" Height="27" Margin="136,49,145,0" Name="Label7" VerticalAlignment="Top">Port Serveur:</Label>
                <TextBox Height="19" Margin="0,52,60,0" Name="TxtPort" VerticalAlignment="Top" HorizontalAlignment="Right" Width="87" />
                <ListBox HorizontalAlignment="Left" Margin="6,8,0,11" Name="ListBox1" Width="124" />
                <TextBox Height="19" Margin="0,30,10,0" Name="TxtAdr" VerticalAlignment="Top" HorizontalAlignment="Right" Width="137" />
                <Label Content="Nom du Serveur:" Foreground="White" Height="27" Margin="136,8,145,0" Name="Label9" VerticalAlignment="Top" />
                <TextBox Height="19" HorizontalAlignment="Right" Margin="0,8,10,0" Name="TxtNom" VerticalAlignment="Top" Width="137" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Paramètres SMTP" Name="GroupBox3" Width="389" Margin="6,361,6,44">
            <Grid Height="94">
                <Label Content="Adresse Mail:" Height="25" HorizontalAlignment="Left" Margin="8,0,0,0" Name="Label10" VerticalAlignment="Top" Width="83" Foreground="White" />
                <Label Content="Adresse SMTP:" Height="23" HorizontalAlignment="Left" Margin="8,19,0,0" Name="Label11" VerticalAlignment="Top" Width="82" Foreground="White" />
                <Label Content="Login:" Height="27" HorizontalAlignment="Left" Margin="8,40,0,0" Name="Label12" VerticalAlignment="Top" Width="72" Foreground="White" />
                <Label Content="Password:" Height="27" HorizontalAlignment="Left" Margin="8,63,0,0" Name="Label13" VerticalAlignment="Top" Width="72" Foreground="White" />
                <TextBox Height="20" HorizontalAlignment="Left" Margin="98,0,0,0" Name="TxtMail" VerticalAlignment="Top" Width="271" />
                <TextBox Height="20" HorizontalAlignment="Left" Margin="98,22,0,0" Name="TxtAdresse" VerticalAlignment="Top" Width="271" />
                <TextBox Height="20" HorizontalAlignment="Left" Margin="98,44,0,0" Name="TxtLogin" VerticalAlignment="Top" Width="158" />
                <PasswordBox Height="20" HorizontalAlignment="Left" Margin="98,66,0,0" Name="TxtPassword" VerticalAlignment="Top" Width="158" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Paramètres du Serveur" Name="GroupBox2" Margin="5.5,187,5.5,166"></GroupBox>
        
        <Label Height="37" Margin="14,0,25,0" Name="Label5" VerticalAlignment="Top" Foreground="DarkOrange" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontStyle="Italic">Propriétés du serveur</Label>
        <Button Height="23" Template="{DynamicResource GlassButton}" Name="BtnOK" Foreground="White" VerticalContentAlignment="Bottom" VerticalAlignment="Bottom" Margin="0,0,99,15" HorizontalAlignment="Right" Width="72">OK</Button>
        <Button Height="23" Template="{DynamicResource GlassButton}" HorizontalAlignment="Right" Margin="0,0,17,15" Name="BtnCancel" VerticalAlignment="Bottom" Width="72" Foreground="White">Fermer</Button>
        <Grid Margin="12,204,12,166">
            <Label HorizontalAlignment="Left" Margin="14,30,0,0" Name="Label1" Width="67" Foreground="White" Height="28" VerticalAlignment="Top">Longitude:</Label>
            <Label Foreground="White" HorizontalAlignment="Left" Margin="14,50,0,62" Name="Label2" Width="67">Latitude:</Label>
            <Label Foreground="White" Margin="14,0,191,47" Name="Label3" Height="23.723" VerticalAlignment="Bottom">Correction Heure Lever Soleil:</Label>
            <Label Foreground="White" Margin="14,0,191,21" Name="Label4" Height="24" VerticalAlignment="Bottom">Correction Heure Coucher Soleil:</Label>
            <TextBox Margin="80,32,0,0" Name="TxtLong" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="107" />
            <TextBox Margin="80,52,0,67" Name="TxtLat" HorizontalAlignment="Left" Width="107" Height="20" />
            <Label Foreground="White" Height="28" HorizontalAlignment="Left" Margin="13,2,0,0" Name="Label8" VerticalAlignment="Top" Width="67">Port SOAP:</Label>
            <TextBox Height="20" Margin="187,0,164,25" Name="HCC" VerticalAlignment="Bottom" Text="0"></TextBox>
            <TextBox Height="21" HorizontalAlignment="Left" Margin="80,3,0,0" Name="TxtSOAP" VerticalAlignment="Top" Width="79" ToolTip="Permet de modifier le port SOAP du serveur à son prochain démarrage" />
            <TextBox Margin="187,0,164,51" Name="HCL" Height="19.723" VerticalAlignment="Bottom">0</TextBox>
        </Grid>
    </Grid>
</UserControl>
