<UserControl x:Class="uSelectElmt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            MinWidth="300" MaxHeight="500">

    <Grid Background="#636060">
        <StackPanel >
            <Label Name="LblTitle" Content="Sélectionner un élément:" FontSize="14" Foreground="White" />
            <Border BorderThickness="2" BorderBrush="Black">
                <ListBox Name="ListBox1" MinHeight="50" MaxHeight="410" Margin="2" Background="Gray" />
            </Border>
            <StackPanel Margin="3 " Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Width="70" Height="22" Margin="2" Name="BtnOK" Content="OK" Template="{DynamicResource GlassButton}" Foreground="White" />
                <Button  Width="70" Height="22" Margin="2" Name="BtnCancel" Content="Annuler" Template="{DynamicResource GlassButton}" Foreground="White" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
