<UserControl x:Class="uTriggerTimer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="529" Height="410" DataContext="{Binding}" Tag="TRIGGER" Margin="20">

    <UserControl.Resources>
        <ControlTemplate x:Key="GlassButton" TargetType="{x:Type Button}">
            <ControlTemplate.Resources>
                <Storyboard x:Key="Timeline1">
                    <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="glow" Storyboard.TargetProperty="(UIElement.Opacity)">
                        <SplineDoubleKeyFrame KeyTime="00:00:00.3000000" Value="1"/>
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
                <Storyboard x:Key="Timeline2">
                    <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="glow" Storyboard.TargetProperty="(UIElement.Opacity)">
                        <SplineDoubleKeyFrame KeyTime="00:00:00.3000000" Value="0"/>
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </ControlTemplate.Resources>
            <Border BorderBrush="#FFFFFFFF" BorderThickness="1,1,1,1" CornerRadius="4,4,4,4">
                <Border x:Name="border" Background="#7F000000" BorderBrush="#FF000000" BorderThickness="1,1,1,1" CornerRadius="4,4,4,4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.507*"/>
                            <RowDefinition Height="0.493*"/>
                        </Grid.RowDefinitions>
                        <Border Opacity="0" HorizontalAlignment="Stretch" x:Name="glow" Width="Auto" Grid.RowSpan="2" CornerRadius="4,4,4,4">
                            <Border.Background>
                                <RadialGradientBrush>
                                    <RadialGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1.702" ScaleY="2.243"/>
                                            <SkewTransform AngleX="0" AngleY="0"/>
                                            <RotateTransform Angle="0"/>
                                            <TranslateTransform X="-0.368" Y="-0.152"/>
                                        </TransformGroup>
                                    </RadialGradientBrush.RelativeTransform>
                                    <GradientStop Color="#B28DBDFF" Offset="0"/>
                                    <GradientStop Color="#008DBDFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Grid.RowSpan="2"/>
                        <Border HorizontalAlignment="Stretch" Margin="0,0,0,0" x:Name="shine" Width="Auto" CornerRadius="4,4,0,0">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.494,0.889" StartPoint="0.494,0.028">
                                    <GradientStop Color="#99FFFFFF" Offset="0"/>
                                    <GradientStop Color="#33FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                </Border>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" TargetName="shine" Value="0.4"/>
                    <Setter Property="Background" TargetName="border" Value="#CC000000"/>
                    <Setter Property="Visibility" TargetName="glow" Value="Hidden"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource Timeline1}"/>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard x:Name="Timeline2_BeginStoryboard" Storyboard="{StaticResource Timeline2}"/>
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>

    <Grid Background="#636060">
        <StackPanel >
            <Label HorizontalAlignment="Center"  Content="Trigger Timer" FontSize="24" FontStyle="Italic" Foreground="DarkOrange" Name="Label1"  />
            <Rectangle Height="20" />
            <StackPanel Orientation="Horizontal" >
                <Label Content="Nom:" Height="22" HorizontalAlignment="Left" Name="Label2" VerticalAlignment="Top" Width="67" Foreground="White" />
                <TextBox Height="21" HorizontalAlignment="Left" Name="TxtNom" VerticalAlignment="Top" Width="218" />
                <CheckBox Content="Enable" Height="17" HorizontalAlignment="Left" Margin="3" Name="ChkEnable" VerticalAlignment="Top" Foreground="White" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" >
                <Label Content="Description:" Foreground="White" Height="22" HorizontalAlignment="Left"  Name="Label3" VerticalAlignment="Top" Width="67" />
                <TextBox Height="21" HorizontalAlignment="Left" Name="TxtDescription" VerticalAlignment="Top" Width="436" />
            </StackPanel>
           
            <StackPanel Orientation="Horizontal" >
                <StackPanel Margin="5">
                        <Label Content="Date - Heure:" FontSize="14" Foreground="Orange" />
                        <StackPanel Orientation="Horizontal" >
                            <StackPanel >
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Hr" HorizontalAlignment="Center" Margin="1" Name="LblH" VerticalAlignment="Top" Width="35" Foreground="White" HorizontalContentAlignment="Center" />
                            <Label Content="Mn" Foreground="White" HorizontalAlignment="Center" Margin="1" Name="LBLM" VerticalAlignment="Top" Width="35" HorizontalContentAlignment="Center" />
                            <Label Content="Ss" Foreground="White" HorizontalAlignment="Center"  Margin="1" Name="LBLS" VerticalAlignment="Top" Width="35" HorizontalContentAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <Button HorizontalAlignment="Left" Margin="1" Name="BtnPHr" Width="35" Height="24" VerticalAlignment="Top" Template="{DynamicResource GlassButton}" Foreground="White" >
                                <Image Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-haut-32.png" />
                            </Button>
                            <Button Height="24" HorizontalAlignment="Left" Margin="1" Name="BtnPMn" VerticalAlignment="Top" Width="35" Template="{DynamicResource GlassButton}" Foreground="White" >
                                <Image Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-haut-32.png" />
                            </Button>
                            <Button Height="24" HorizontalAlignment="Left" Margin="1" Name="BtnPSc" VerticalAlignment="Top" Width="35" Template="{DynamicResource GlassButton}" Foreground="White" >
                                <Image Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-haut-32.png" />
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <TextBox FontSize="20" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="1" Name="TxtHr" Text="00" VerticalAlignment="Top" Width="35" Background="Black" Foreground="White" />
                            <TextBox HorizontalAlignment="Left" Margin="1" Name="TxtMn" VerticalAlignment="Top" Width="35" Text="00" FontSize="20" HorizontalContentAlignment="Center" Background="Black" Foreground="White" />
                            <TextBox FontSize="20" HorizontalAlignment="Left" Margin="1" Name="TxtSc" Text="00" VerticalAlignment="Top" Width="35" HorizontalContentAlignment="Center" Background="Black" Foreground="White" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" >
                            <Button Height="24" HorizontalAlignment="Left" Margin="1" Name="BtnMHr" VerticalAlignment="Top" Width="35" Template="{DynamicResource GlassButton}" Foreground="White" >
                                <Image Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-bas-32.png" />
                            </Button>
                            <Button Height="24" HorizontalAlignment="Left" Margin="1" Name="BtnMMn" VerticalAlignment="Top" Width="35" Template="{DynamicResource GlassButton}" Foreground="White" >
                                <Image Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-bas-32.png" />
                            </Button>
                            <Button Height="24" HorizontalAlignment="Left" Margin="1" Name="BtnMSec" VerticalAlignment="Top" Width="35" Template="{DynamicResource GlassButton}" Foreground="White" >
                                <Image Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-bas-32.png" />
                            </Button>
                        </StackPanel>
</StackPanel>
                            <Rectangle Width="20"/>
                            <StackPanel >
                                <StackPanel Orientation="Horizontal" >
                                    <Label Content="Jr" HorizontalAlignment="Center" Margin="1" Name="LblJour" VerticalAlignment="Top" Width="35" Foreground="White" HorizontalContentAlignment="Center" />
                                    <Label Content="Ms" Foreground="White" HorizontalAlignment="Center" Margin="1" Name="LblMois" VerticalAlignment="Top" Width="35" HorizontalContentAlignment="Center" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" >
                                    <Button HorizontalAlignment="Left" Margin="1" Name="BtnPJr" Width="35" Height="24" VerticalAlignment="Top" Template="{DynamicResource GlassButton}" Foreground="White" >
                                        <Image Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-haut-32.png" />
                                    </Button>
                                    <Button Height="24" HorizontalAlignment="Left" Margin="1" Name="BtnPMs" VerticalAlignment="Top" Width="35" Template="{DynamicResource GlassButton}" Foreground="White" >
                                        <Image Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-haut-32.png" />
                                    </Button>
                                    
                                </StackPanel>
                                <StackPanel Orientation="Horizontal ">
                                    <TextBox FontSize="20" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="1" Name="TxtJr" Text="00" VerticalAlignment="Top" Width="35" Background="Black" Foreground="White" />
                                    <TextBox HorizontalAlignment="Left" Margin="1" Name="TxtMs" VerticalAlignment="Top" Width="35" Text="00" FontSize="20" HorizontalContentAlignment="Center" Background="Black" Foreground="White" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" >
                                    <Button Height="24" HorizontalAlignment="Left" Margin="1" Name="BtnMJr" VerticalAlignment="Top" Width="35" Template="{DynamicResource GlassButton}" Foreground="White" >
                                        <Image Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-bas-32.png" />
                                    </Button>
                                    <Button Height="24" HorizontalAlignment="Left" Margin="1" Name="BtnMMs" VerticalAlignment="Top" Width="35" Template="{DynamicResource GlassButton}" Foreground="White" >
                                        <Image Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-bas-32.png" />
                                    </Button>

                                </StackPanel>
                                </StackPanel>

                            <Rectangle Width="20"/>
                            <StackPanel Margin="2">
                                <CheckBox Content="Lundi" Height="15" HorizontalAlignment="Left"  Name="CheckBox1" VerticalAlignment="Top"  Foreground="White" />
                                <CheckBox Content="Mardi" Height="15" HorizontalAlignment="Left"  Name="CheckBox2" VerticalAlignment="Top"  Foreground="White" />
                                <CheckBox Content="Mercredi" Height="15" HorizontalAlignment="Left"  Name="CheckBox3" VerticalAlignment="Top"  Foreground="White" />
                                <CheckBox Content="Jeudi" Height="15" HorizontalAlignment="Left"  Name="CheckBox4" VerticalAlignment="Top"  Foreground="White" />
                                <CheckBox Content="Vendredi" Height="15" HorizontalAlignment="Left"  Name="CheckBox5" VerticalAlignment="Top"  Foreground="White" />
                                <CheckBox Content="Samedi" Height="15" HorizontalAlignment="Left"  Name="CheckBox6" VerticalAlignment="Top"  Foreground="White" />
                                <CheckBox Content="Dimanche" Height="15" HorizontalAlignment="Left"  Name="CheckBox7" VerticalAlignment="Top"  Foreground="White" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
           </StackPanel>

            <StackPanel Margin="5">
                <Label Content="Macro(s):" FontSize="14" Foreground="Orange" />
                <StackPanel Orientation="Horizontal" >
                    <Button Name="DeleteMacro" Template="{DynamicResource GlassButton}" ToolTip="Supprimer" Margin="2">
                        <Image Height="20" Width="20" Source="/HoMIAdmiN;component/Images/fermer-croix-supprimer-128.png" />
                    </Button>
                    <Button Name="UpMacro" Template="{DynamicResource GlassButton}" ToolTip="Supprimer" Margin="2">
                        <Image Height="20" Width="20" Source="/HoMIAdmiN;component/Images/fleche-vers-le-haut-icone-32.png"  />
                    </Button>
                    <Button Name="DownMacro" Template="{DynamicResource GlassButton}" ToolTip="Supprimer" Margin="2">
                        <Image Height="20" Width="20" Source="/HoMIAdmiN;component/Images/bullet-fleche-vers-le-bas-32.png" />
                    </Button>

                </StackPanel>
                <ListBox Height="80" HorizontalAlignment="Left" Margin="2" Name="ListBox1" VerticalAlignment="Top" Width="287" AllowDrop="True" />
            </StackPanel>

            <GroupBox Header="Condition" Height="273" HorizontalAlignment="Left" Margin="13,112,0,0" Name="GroupBox1" VerticalAlignment="Top" Width="254">
                <Grid>
                    <Label Content="Minute:" Height="22" HorizontalAlignment="Left" Margin="2,35,0,0" Name="Label4" VerticalAlignment="Top" Width="48" Foreground="White" />
                    <GroupBox Header="Jours" Height="84" HorizontalAlignment="Left" Margin="8,157,0,0" Name="GroupBox4" VerticalAlignment="Top" Width="213">
                        <Grid>
                        
                        </Grid>
                    </GroupBox>
                    <Label Content="Heure:" Foreground="White" Height="22" HorizontalAlignment="Left" Margin="2,65,0,0" Name="Label5" VerticalAlignment="Top" Width="48" />
                    <Label Content="Jour:" Foreground="White" Height="22" HorizontalAlignment="Left" Margin="2,94,0,0" Name="Label6" VerticalAlignment="Top" Width="48" />
                    <Label Content="Mois:" Foreground="White" Height="22" HorizontalAlignment="Left" Margin="3,124,0,0" Name="Label7" VerticalAlignment="Top" Width="48" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="56,36,0,0" Name="CbMinute" VerticalAlignment="Top" Width="66" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="56,65,0,0" Name="CbHeure" VerticalAlignment="Top" Width="66" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="56,94,0,0" Name="CbJour" VerticalAlignment="Top" Width="66" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="56,123,0,0" Name="CbMois" VerticalAlignment="Top" Width="66" />
                    <Label Content="Seconde:" Foreground="White" Height="22" HorizontalAlignment="Left" Margin="2,5,0,0" Name="Label8" VerticalAlignment="Top" Width="60" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="56,6,0,0" Name="CbSeconde" VerticalAlignment="Top" Width="66" />
                </Grid>
            </GroupBox>

        </StackPanel>
        
        <Button Content="Fermer" Foreground="White" Height="25" HorizontalAlignment="Right" Margin="0,41,12,0" Name="BtnClose" Template="{DynamicResource GlassButton}" VerticalAlignment="Top" Width="88.75" />
        <Button Content="Ok" Foreground="White" Height="25" HorizontalAlignment="Right" Margin="0,10,12,0" Name="BtnOK" Template="{DynamicResource GlassButton}" VerticalAlignment="Top" Width="88.75" />
    </Grid>
    
</UserControl>
