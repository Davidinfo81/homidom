<UserControl x:Class="uZone"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Tag="ZONE" Margin="10">

    <Grid Background="#636060" Opacity="0.85">
        <Border Name="Border1" BorderBrush="Gray" BorderThickness="2">
            <StackPanel >
                <Label HorizontalAlignment="Center" Name="Label1" VerticalAlignment="Top" FontSize="24" FontStyle="Italic" Foreground="DarkOrange">Zone</Label>
                <Rectangle Height="40" />
                <StackPanel Orientation="Horizontal" >
                    <Label HorizontalAlignment="Left" Name="Label2" VerticalAlignment="Top" Width="55" Foreground="White" Content="Nom :"></Label>
                    <TextBox Height="22" Width="200" Name="TxtName" VerticalAlignment="Top" Foreground="White" Background="DarkGray" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" >
                    <Label Foreground="White" Name="Label3" VerticalAlignment="Top" Width="55" Content="Image :"></Label>
                    <Image Margin="5" Name="ImgZone" Stretch="Fill" HorizontalAlignment="Left" Width="90" Height="90" Source="/HoMIAdmiN;component/Images/Defaut-128.png" />
                </StackPanel>
                <Rectangle Height=" 10" />
                <Label Content="Eléments appartenant à la zone" Foreground="White" ToolTip="Glisser un élément (device, macro ou zone) dans la liste ci-dessous" FontStyle="Oblique" FontWeight="ExtraBold" />
                <StackPanel Orientation="Horizontal" >
                    <Rectangle Width="10" />
                    <Label Content="Devices" Foreground="White" Width="200" Margin="3" />
                    <Label Content="Zones" Foreground="White" Width="200" Margin="3" />
                    <Label Content="Macros" Foreground="White" Width="200" Margin="3" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" >
                    <Rectangle Width="10" />
                    <ListBox Margin="3" Name="ListBxDevice" Width="200" Height="200" AllowDrop="True" Grid.ColumnSpan="2" />
                    <ListBox Margin="3" Name="ListBxZone" Width="200" Height="200" AllowDrop="True" Grid.ColumnSpan="2" />
                    <ListBox Margin="3" Name="ListBxMacro" Width="200" Height="200" AllowDrop="True" Grid.ColumnSpan="2" />
                </StackPanel>
                </StackPanel>
        </Border>
        <Image Height="60" HorizontalAlignment="Left" Margin="17,10,0,0" Name="ImgIcon" Stretch="Fill" VerticalAlignment="Top" Width="60" Source="/HoMIAdmiN;component/Images/Defaut-128.png" ToolTip="Click sur image pour la modifier">
            <Image.LayoutTransform >
                <RotateTransform CenterX="0" CenterY="0" Angle="-10" />
            </Image.LayoutTransform>
        </Image>

        <Label Foreground="White" Height="24" HorizontalAlignment="Left" Margin="1,2,0,0" Name="Label4" VerticalAlignment="Top" Width="42">Icon:</Label>
        <Button Foreground="White" Height="25" HorizontalAlignment="Right" Margin="0,12,12,0" Name="BtnOK" Template="{DynamicResource GlassButton}" VerticalAlignment="Top" Width="88.75">Ok</Button>
        <Button Foreground="White" Height="25" HorizontalAlignment="Right" Margin="0,43.25,12,0" Name="BtnClose" Template="{DynamicResource GlassButton}" VerticalAlignment="Top" Width="88.75">Fermer</Button>
    </Grid>
</UserControl>
