<Window x:Class="WindowImg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sélectionner une image" Width="500" Height="450" ResizeMode="NoResize" ShowInTaskbar="True" WindowStartupLocation="CenterScreen" Topmost="False" Icon="/HoMIAdmiN;component/icone.ico">

    <Grid Background="#636060">
        <StackPanel >
            <ListBox Margin="5"  Name="ListBoxImg" Height="350" Width="450" Background="DarkGray" />
            <Rectangle Height="10" />
            <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="BtnUpload" Height="25" Template="{DynamicResource GlassButton}" Margin="2" Content="Upload" Width="70" Foreground="White" />
                <Button Name="BtnOK" Height="25" Template="{DynamicResource GlassButton}" Margin="2" Content="Ouvrir" Width="70" Foreground="White" />
                <Button Name="BtnCancel" Height="25" Template="{DynamicResource GlassButton}" Margin="2" Content="Annuler" Width="70" Foreground="White" />
            </StackPanel >
        </StackPanel>
    </Grid>
</Window>
