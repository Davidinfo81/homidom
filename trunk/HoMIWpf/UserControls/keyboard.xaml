<UserControl xmlns:my="clr-namespace:WpfKb.Controls;assembly=WpfKb"  x:Class="keyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             >
    
    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Background="#00000000">
        <StackPanel Margin="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="20" Width=" 20" Name="BtnClose" Content="▼" Template="{DynamicResource GlassButton}" Foreground="White" Margin="1" FontSize="13" />
        </StackPanel>
        <StackPanel >
            <my:OnScreenKeyboard Height="170" Width="438" />
        </StackPanel> 
    </StackPanel>
</UserControl>
